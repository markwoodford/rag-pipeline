# Example Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# AWS Bedrock Configuration
# =============================================================================

# AWS credentials for Bedrock API access
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# AWS region where Bedrock models are available
AWS_REGION=us-east-1

# Bedrock model identifiers
BEDROCK_CLAUDE_MODEL_ID=anthropic.claude-sonnet-4-5-20250929-v1:0
BEDROCK_TITAN_EMBEDDING_MODEL_ID=amazon.titan-embed-text-v2:0

# =============================================================================
# PostgreSQL Database Configuration
# =============================================================================

# Database host (use 'db' for Docker, 'localhost' for local development)
POSTGRES_HOST=db

# Database port
POSTGRES_PORT=5432

# Database name
POSTGRES_DB=rag_pipeline

# Database credentials
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# =============================================================================
# RAG Pipeline Configuration
# =============================================================================

# Directory containing markdown files to ingest (relative to project root)
DOCS_DIRECTORY=docs

# Chunk size for document splitting (in characters)
CHUNK_SIZE=1200

# Chunk overlap for document splitting (in characters)
CHUNK_OVERLAP=240

# Number of results to retrieve for RAG queries
RETRIEVAL_TOP_K=5
